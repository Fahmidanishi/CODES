#count the item of the list
list = ["Apple", "Banana","Pear"]

char_count_dic = {}

for word in list:
    for char in word:
        if char in char_count_dic:
            char_count_dic[char] += 1
        else:
            char_count_dic[char] = 1
print(char_count_dic) 

#take a list and there will be positive and negative value and replace the negative value with 0
numbers = [4,-11,8,-15,22,-7,3,-12]

for i in range(len(numbers)):
    if numbers[i] < 0:
        numbers[i] = 0
print("Updated list:",numbers) 

# take a list and there will be different length of strings and will print them with same string length
items = ["Apple","Banana","Mango","Pear","kiwi"]
length_dic = {}
for item in items:
    length = len(item) #find the length of the word
    if length not in length_dic:
        length_dic[length] = [item]
    else:
        length_dic[length].append(item) #add to the existing group
print(length_dic) 

#given a list and divide them with 7 and count the division
list = [7,12,49,70,3,5]
count = 0

for i in range(len(list)):
    if list[i] % 7 == 0:
        count += 1
print("Total count: ",count) 

